    <style>
        .header-area .main-header-area .main-menu ul li .submenu li a {
            padding: 8px 9px;
            position: inherit;
            -webkit-transition: 0.3s;
            -moz-transition: 0.3s;
            -o-transition: 0.3s;
            transition: 0.3s;
            display: block;
            color: #000;
        }

        .owl-carousel .owl-nav div {
            background: transparent;
            height: 40px;
            left: 0px;
            position: absolute;
            text-align: center;
            top: 24%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
            -webkit-transition: all 0.3s ease 0s;
            -o-transition: all 0.3s ease 0s;
            transition: all 0.3s ease 0s;
            width: 40px;
            background-color: transparent;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            border-radius: 50%;
            left: 40px;
            font-size: 12px;
            line-height: 40px;
            background: #FFFFFF;
            left: -20px;
            color: #107785 !important;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-area ">
            <div class="header-top_area d-none d-lg-block">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-4 col-lg-4">
                            <div class="logo">
                                <a href="@Url.Action("Index","Home")">
                                    <img src="~/img/HP ACCOUNTANT LOGO.png" alt="" style="width:40%">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-8 col-md-8">
                            <div class="header_right d-flex align-items-center">
                                <div class="short_contact_list">
                                    <ul>
                                        <li><a href="#"> <i class="fa fa-envelope"></i> info@hpaccountant.com</a></li>
                                    </ul>
                                </div>

                                <div class="book_btn d-none d-lg-block">
                                    <a  class="boxed-btn3-line" data-bs-toggle="modal" data-bs-target="#modalForm">
                                        Get Free Quote
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="sticky-header" class="main-header-area">
                <div class="container">
                    <div class="header_bottom_border">
                        <div class="row align-items-center">
                            <div class="col-12 d-block d-lg-none">
                                <div class="logo">
                                    <a href="@Url.Action("Index","Home")">
                                        <img src="~/img/HP ACCOUNTANT LOGO.png" alt="" style="width:40%">

                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-10 col-lg-10">
                                <div class="main-menu  d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a href="@Url.Action("Index","Home")">home</a></li>
                                            <li><a href="@Url.Action("Index","AboutUS")">About Us</a></li>
                                            <li>
                                                <a href="#">Services <i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    <li><a href="@Url.Action("YearEndAccounts","Service")"> Year End Accounts</a></li>
                                                    <li><a href="@Url.Action("Bookkeeping","Service")">Bookkeeping &amp; VAT</a></li>
                                                    <li><a href="@Url.Action("Payroll","Service")">Payroll</a></li>
                                                    <li><a href="@Url.Action("SelfAssessment","Service")">Self-Assessment</a></li>
                                                    <li><a href="@Url.Action("ManagementAccounting","Service")">Management Accounting</a></li>
                                                </ul>
                                            </li>

                                            <li><a href="@Url.Action("Index","Contact")">Contact</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                           
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </header>
    <div class="">
        @RenderBody()

        <div class="Estimate_area overlay">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-5">
                        <div class="Estimate_info">
                            <h3>Get free Estimate</h3>
                            <p>
                                Esteem spirit temper too say adieus who direct esteem. It look estee luckily or picture
                                placing.
                            </p>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-8 col-md-7">
                        <div class="form">
                            <div class="row">
                                <div class="col-xl-6">
                                    <div class="input_field">
                                        <input type="text" placeholder="Your name" id="txtName">
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="input_field">
                                        <input type="email" placeholder="Email" id="txtEmail">
                                    </div>
                                </div>
                                <div class="col-xl-6">
                                    <div class="input_field">
                                        <input type="text" placeholder="Contact number" id="txtContactno">
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    <div class="input_field">
                                        <select class="wide" id="drpService">
                                            <option data-display="Services Type">Services Type</option>
                                            <option value="Year End Accounts">Year End Accounts</option>
                                            <option value="Bookkeeping">Bookkeeping & VAT</option>
                                            <option value="Payroll">Payroll</option>
                                            <option value="Self-Assessment">Self-Assessment </option>
                                            <option value="Management Accounting">Management Accounting</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xl-12">
                                    <div class="input_field">
                                        <textarea placeholder="Message" id="txtMessage"></textarea>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="input_field">
                                        <button class="boxed-btn3-line" type="submit" id="btnSubmit">Send Enquiry</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <footer class="footer">
            <div class="contact_location">
                <div class="container">
                    <h2 style="text-align:center;">Software on which we have grip</h2>
                    <section class="customer-logos slider">
                        <div class="slide"><img src="~/img/Software/download.png"></div>
                        <div class="slide"><img src="~/img/Software/Freeagent.jfif"></div>
                        <div class="slide"><img src="~/img/Software/QuickBooks.jfif"></div>
                        <div class="slide"><img src="~/img/Software/brightpay.jfif"></div>
                        <div class="slide"><img src="~/img/Software/Taxfiler.png"></div>
                        <div class="slide"><img src="~/img/Software/Sage sotware.png"></div>
                        <div class="slide"><img src="~/img/Software/IRIS.png"></div>
                        <div class="slide"><img src="~/img/Software/payrolls.png"></div>
                    </section>

                </div>
            </div>
            <div class="copy-right_text">
                <div class="container">
                    <div class="footer_border"></div>
                    <div class="row">
                        <div class="col-xl-12">
                            <p class="copy_right text-center">
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
